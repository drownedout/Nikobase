<div class="col-md-offset-2 col-md-8">
<%= simple_form_for(@company, html: { class: 'form-horizontal' }) do |f| %>
	<div class="form-group">
		<%= f.label :name, "Company Name", class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
	    	<%= f.text_field :name, required: true, autofocus: true , class: "form-control" %> 
	   	</div>
	</div>
	<div class="form-group">
		<%= f.label :email, "Email", class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= f.text_field :email, required: true, autofocus: true , class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :mou, "MOU? (Check if yes)", class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
	    	<%= f.check_box :mou, required: true, autofocus: true  %> 
	   	</div>
	</div>
	<div class="form-group">
		<%= f.label :notes, "Notes", class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= f.text_area :notes, autofocus: true, class: "form-control box" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-8">
			<%= f.button :submit, class: "btn btn-primary" %>
		</div>
	</div>
<% end %>
<%= link_to "Back", :back, class: "btn btn-primary"  %>